@model IEnumerable<dotnet_mvc_car_wash.Models.Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<!-- Sección de búsqueda -->
<div class="mb-3">
    <form method="get" asp-action="Index" class="d-flex">
        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm"
               class="form-control me-2" placeholder="Buscar empleado..."
               style="max-width: 300px;">
        <button class="btn btn-primary me-2" type="submit">Buscar</button>
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
        {
            <a asp-action="Index" class="btn btn-secondary me-2">Limpiar</a>
        }
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </form>
</div>

<!-- Información de resultados -->
@if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
{
    <div class="alert alert-info">
        Se encontraron @ViewBag.FilteredCount de @ViewBag.EmployeeCount empleados
        que coinciden con "<strong>@ViewBag.SearchTerm</strong>"
    </div>
}

<!-- Mensaje cuando no hay resultados -->
@if (Model != null && !Model.Any() && !string.IsNullOrEmpty(ViewBag.SearchTerm))
{
    <div class="alert alert-warning">
        <strong>No se encontraron coincidencias</strong><br>
        No se encontraron empleados que coincidan con el término "<strong>@ViewBag.SearchTerm</strong>"
        <br><a asp-action="Index" class="btn btn-primary btn-sm mt-2">Ver todos los empleados</a>
    </div>
}

<!-- Tabla de empleados -->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DailySalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccumulatedVacationDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TerminationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeveranceAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DailySalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccumulatedVacationDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TerminationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeveranceAmount)
            </td>
                <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                @Html.ActionLink("Details", "Details", new {  id=item.Id  }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
                </td>
            </tr>
        }
    </tbody>
</table>