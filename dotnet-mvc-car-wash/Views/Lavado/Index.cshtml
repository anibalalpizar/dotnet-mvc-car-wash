<!-- Views/Lavado/Index.cshtml -->
@model List<dotnet_mvc_car_wash.Models.Lavado>

@{
    ViewData["Title"] = "Lavados";
}

<h2>Lavados</h2>

<p>
    <a asp-action="Create">Crear Nuevo Lavado</a>
</p>

<form asp-action="Index" method="get">
    <div>
        <label for="searchTerm">Buscar:</label>
        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" />
        <input type="submit" value="Buscar" />
        <a asp-action="Index">Limpiar</a>
    </div>
</form>

<p>
    Total de lavados: @ViewBag.LavadoCount | Filtrados: @ViewBag.FilteredCount
</p>

<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PlacaVehiculo)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().TipoLavado)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PrecioBase)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().IVA)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PrecioTotal)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().EstadoLavado)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PlacaVehiculo)</td>
                    <td>@Html.DisplayFor(modelItem => item.TipoLavado)</td>
                    <td>₡@item.PrecioBase.ToString("N0")</td>
                    <td>₡@item.IVA.ToString("N0")</td>
                    <td>₡@item.PrecioTotal.ToString("N0")</td>
                    <td>@Html.DisplayFor(modelItem => item.EstadoLavado)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdLavado">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.IdLavado">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdLavado">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="11">No hay lavados registrados</td>
            </tr>
        }
    </tbody>
</table>
